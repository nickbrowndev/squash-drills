<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.google.code.squashdrills"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >


        <activity
            android:name="com.google.code.squashdrills.MainMenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.google.code.squashdrills.RoutineMenuActivity"
            android:label="@string/title_activity_routine_menu" >
        </activity>
        <activity
            android:name="com.google.code.squashdrills.PlayRoutineActivity"
            android:label="@string/title_activity_play_routine" >
        </activity>
        <activity
            android:name="com.google.code.squashdrills.PersonalRecordsMenuActivity"
            android:label="@string/title_activity_personal_records_menu" >
        </activity>

        

    </application>

</manifest>